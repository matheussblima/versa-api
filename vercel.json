{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "dist/src/main.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "certs/**",
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/swagger/(.*)",
      "dest": "dist/src/main.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "dist/src/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/src/main.js"
    }
  ]
}
