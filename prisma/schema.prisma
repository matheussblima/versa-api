generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Regiao {
  id        String     @id @default(uuid())
  sigla     String     @unique
  nome      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  estados   Estado[]
  subUnidades SubUnidade[]

  @@map("regioes")
}

model Estado {
  id        String     @id @default(uuid())
  sigla     String     @unique
  nome      String
  regiaoId  String
  regiao    Regiao     @relation(fields: [regiaoId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  subUnidades SubUnidade[]

  @@map("estados")
}

model SubUnidade {
  id                String            @id @default(uuid())
  nome              String
  descricao         String?
  estadoId          String?
  estado            Estado?           @relation(fields: [estadoId], references: [id])
  regiaoId          String?
  regiao            Regiao?           @relation(fields: [regiaoId], references: [id])
  apeRemoto         Boolean?
  apeLocal          Boolean?
  codigoI5          String?
  codigoI0          String?
  codigoI100        String?
  codigoConv        String?
  cnpj              String?
  unidadeId String
  unidade   Unidades   @relation(fields: [unidadeId], references: [id], onDelete: Cascade)
  pontoDeMedicaoId  String?           @unique
  pontoDeMedicao    PontoDeMedicao?   @relation(fields: [pontoDeMedicaoId], references: [id])
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("sub_unidades")
}

model Unidades {
  id                String            @id @default(uuid())
  nome              String
  codigoCCEE        String            @unique
  grupoEconomico    String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  subUnidades       SubUnidade[]

  @@map("unidades")
}

model PontoDeMedicao {
  id                String    @id @default(uuid())
  codigo            String    @unique
  descricao         String?
  subUnidade        SubUnidade?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("pontos_de_medicao")
}
